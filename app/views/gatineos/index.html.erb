<p id="notice"><%= notice %></p>

<h1>Gatineos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cor</th>
      <th>Tutor</th>
      <th>Raça</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gatineos.each do |gatineo| %>
      <tr>
        <td><%= gatineo.Name %></td>
        <td><%= gatineo.Cor %></td>
        <td><%= gatineo.Tutor %></td>
        <td><%= gatineo.Raça %></td>
        <td><%= link_to 'Ver', gatineo %>
        </td>        
        <td><%= link_to 'Editar', edit_gatineo_path(gatineo) %>
        </td>
        <td><%= link_to 'Apagar', gatineo, method: :delete, data: { confirm: 'Você tem certeza?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="add-new">
<%= link_to 'Novo Gatineo', new_gatineo_path %>
</div>
